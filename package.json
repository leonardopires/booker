{
  "name": "booker",
  "version": "1.0.0",
  "description": "A minimal/no-nonsense Obsidian plugin to compile multiple Markdown files into a single document.",
  "main": "dist/main.js",
  "scripts": {
    "build": "node esbuild.config.mjs production",
    "dev": "node esbuild.config.mjs development",
    "install:vault": "node scripts/install-to-vault.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "markdown"
  ],
  "author": "Booker",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.25",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.20.1",
    "jsdom": "^27.4.0",
    "obsidian": "^1.5.12",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
